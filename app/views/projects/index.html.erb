<div class="card">
  <div class="card-body">
    <h2 class='card-title d-flex justify-content-between mb-4'>
    <span>Projects</span>
    <%= link_to 'New Project', new_project_path, class: 'btn btn-primary' %>
    </h2>

    <% @projects.each do |project| %>
      <%= link_to project, class: 'text-decoration-none' do %>
        <div class="card project-card mb-3">
          <div class="card-body">
            <div class="d-flex justify-content-start w-50 align-items-baseline">
                <span class="badge bg-<%= project.badge_color %> me-1"><%= project.status %></span>
                <% if project.status != 'Not Started'%>
                <div class="progress w-25">
                    <div class="progress-bar <%= project.status == 'In Progress' ? 'progress-bar-striped progress-bar-animated bg-info' : '' %>   <%= project.status == 'Complete' ? 'bg-success' : '' %>" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: <%=project.percent_complete %>%">(<%= project.total_complete%>/<%= project.total_tasks%> tasks)</div>
                </div>
                <% end %>
            </div>

            <h5 class="card-title text-dark"><strong><%= project.name %></strong></h5>
            <p class="text-secondary"><%= project.description %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
